@model administracionScoutsCR.Models.ReqInsignia

@{
    ViewData["Title"] = "Detalles del Requisito";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Detalles del Requisito</h4>
            <h6>Información completa del requisito</h6>
        </div>
    </div>

    <!-- Detalles del Requisito -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <ul class="event-bar">
                        <li>
                            <h4>Descripción</h4>
                            <h6>@Html.DisplayFor(model => model.Descripcion)</h6>
                        </li>
                        <li>
                            <h4>Insignia Asociada</h4>
                            <h6>@Model.IdInsigniasNavigation?.Nombre</h6>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="row mt-3">
        <div class="col-lg-12 text-center">
            <a asp-action="Edit" asp-route-id="@Model.IdReqInsignia" class="btn btn-warning me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>
