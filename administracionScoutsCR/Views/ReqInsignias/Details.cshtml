@model administracionScoutsCR.Models.ReqInsignia

@{
    ViewData["Title"] = "Detalles del Requisito";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Detalles del Requisito</h4>
            <h6>Información completa del requisito de insignia</h6>
        </div>
    </div>

    <!-- Requisito Details Section -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-sm-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <ul class="event-bar">
                        <li>
                            <h4>Descripción</h4>
                            <h6>@Html.DisplayFor(model => model.Descripcion)</h6>
                        </li>
                        <li>
                            <h4>Insignia Asociada (ID)</h4>
                            <h6>@Html.DisplayFor(model => model.IdInsigniasNavigation.IdInsignia)</h6>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de Acción -->
    <div class="row mt-3">
        <div class="col-lg-12 text-center">
            <a asp-action="Edit" asp-route-id="@Model?.IdReqInsignia" class="btn btn-warning me-2">
                <i data-feather="edit" class="me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i data-feather="list" class="me-1"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>

<!-- Feather Icons -->
@section Scripts {
    <script>
        feather.replace();
    </script>
}