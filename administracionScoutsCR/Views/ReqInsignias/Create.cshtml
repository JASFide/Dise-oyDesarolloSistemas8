@model administracionScoutsCR.Models.ReqInsignia

@{
    ViewData["Title"] = "Crear Requisito de Insignia";
}

<div>
    <div class="content">
        <div class="page-header">
            <div class="add-item d-flex">
                <div class="page-title">
                    <h4>Nuevo Requisito de Insignia</h4>
                    <h6>Crear un nuevo requisito</h6>
                </div>
            </div>
            <ul class="table-top-head">
                <li>
                    <div class="page-btn">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i data-feather="arrow-left" class="me-2"></i>Volver a la lista
                        </a>
                    </div>
                </li>
            </ul>
        </div>

        <!-- Formulario de creación de requisito -->
        <form asp-action="Create" method="post">
            <div class="card">
                <div class="card-body add-product pb-0">
                    <div class="accordion-card-one accordion" id="accordionExample">
                        <div class="accordion-item">
                            <div class="accordion-header" id="headingOne">
                                <div class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-controls="collapseOne">
                                    <div class="addproduct-icon">
                                        <h5>
                                            <i data-feather="info" class="add-info"></i>
                                            <span>Información del Requisito</span>
                                        </h5>
                                        <a href="javascript:void(0);">
                                            <i data-feather="chevron-down" class="chevron-down-add"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-lg-6 col-sm-12">
                                            <div class="mb-3">
                                                <label asp-for="Descripcion" class="form-label">Descripción</label>
                                                <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción del requisito" />
                                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-sm-12">
                                            <div class="mb-3">
                                                <label asp-for="IdInsignias" class="form-label">Insignia</label>
                                                <select asp-for="IdInsignias" class="form-control" asp-items="ViewBag.InsigniasDisponibles">
                                                    <option value="">Seleccione una insignia</option>
                                                </select>
                                                <span asp-validation-for="IdInsignias" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Botones de acción -->
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="btn-addproduct mb-4">
                                                <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                                                <button type="submit" class="btn btn-primary">Guardar Requisito</button>
                                            </div>
                                        </div>
                                    </div>

                                </div> <!-- /accordion-body -->
                            </div> <!-- /collapseOne -->
                        </div> <!-- /accordion-item -->
                    </div> <!-- /accordion -->
                </div> <!-- /card-body -->
            </div> <!-- /card -->
        </form> <!-- /form -->
    </div> <!-- /content -->
</div> <!-- /page-wrapper -->
<!-- Customization Sidebar -->
<div class="customizer-links" id="setdata">
    <ul class="sticky-sidebar">
        <li class="sidebar-icons">
            <a href="#" class="navigation-add" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-original-title="Configuraciones">
                <i data-feather="settings" class="feather-five"></i>
            </a>
        </li>
    </ul>
</div>

<!-- Scripts -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}