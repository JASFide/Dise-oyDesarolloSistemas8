@model administracionScoutsCR.Models.ReqInsignia

@{
    ViewData["Title"] = "Eliminar Requisito";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Eliminar Requisito</h4>
            <h6>¿Estás seguro que deseas eliminar este requisito?</h6>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card border border-danger">
                <div class="card-body">
                    <ul class="event-bar">
                        <li>
                            <h4>Descripción</h4>
                            <h6>@Html.DisplayFor(model => model.Descripcion)</h6>
                        </li>
                        <li>
                            <h4>Insignia Asociada</h4>
                            <h6>ID: @Html.DisplayFor(model => model.IdInsigniasNavigation.IdInsignia)</h6>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones -->
    <div class="row mt-3">
        <div class="col-lg-12 text-center">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdReqInsignia" />
                <button type="submit" class="btn btn-danger me-2">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
