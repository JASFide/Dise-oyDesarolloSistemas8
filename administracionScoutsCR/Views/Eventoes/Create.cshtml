@model administracionScoutsCR.Models.Evento
@{
    ViewData["Title"] = "Create";
}

<body>
    <div>
        <div class="content">

            <!-- Formulario de creación de evento -->
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-body add-product pb-0">
                        <div class="accordion-card-one accordion" id="accordionExample">
                            <div class="accordion-item">
                                <div class="accordion-header" id="headingOne">
                                    <div class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-controls="collapseOne">
                                        <div class="addproduct-icon">
                                            <h5><i data-feather="info" class="add-info"></i><span>Crear un nuevo evento</span></h5>
                                            <a href="javascript:void(0);"><i data-feather="chevron-down" class="chevron-down-add"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <div class="row">
                                            <div class="col-lg-6 col-sm-12">
                                                <div class="mb-3">
                                                    <label asp-for="Titulo" class="form-label">Título</label>
                                                    <input asp-for="Titulo" class="form-control" placeholder="Ingrese el título del evento" />
                                                    <span asp-validation-for="Titulo" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-sm-12">
                                                <div class="mb-3">
                                                    <label asp-for="Fecha" class="form-label">Fecha</label>
                                                    <div class="input-group">
                                                        <input asp-for="Fecha" type="datetime-local" class="form-control" placeholder="Seleccione la fecha del evento" />
                                                    </div>
                                                    <span asp-validation-for="Fecha" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6 col-sm-12">
                                                <div class="mb-3">
                                                    <label asp-for="Lugar" class="form-label">Lugar</label>
                                                    <input asp-for="Lugar" class="form-control" placeholder="Ingrese el lugar del evento" />
                                                    <span asp-validation-for="Lugar" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-sm-12">
                                                <div class="mb-3">
                                                    <label asp-for="Encargado" class="form-label">Encargado</label>
                                                    <input asp-for="Encargado" class="form-control" placeholder="Nombre del encargado" />
                                                    <span asp-validation-for="Encargado" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6 col-sm-12">
                                                <div class="mb-3">
                                                    <label asp-for="ContactoEncargado" class="form-label">Contacto del Encargado</label>
                                                    <input asp-for="ContactoEncargado" class="form-control" placeholder="Ingrese el contacto del encargado" />
                                                    <span asp-validation-for="ContactoEncargado" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-sm-12">
                                                <div class="mb-3">
                                                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                                                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción del evento"></textarea>
                                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6 col-sm-12">
                                                <div class="mb-3">
                                                    <label asp-for="ImagenEvento" class="form-label">Imagen del Evento</label>
                                                    <input asp-for="ImagenEvento" type="file" class="form-control" accept="image/*" />
                                                    <span asp-validation-for="ImagenEvento" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Botones de acción -->
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="btn-addproduct mb-4">
                                                    <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                                                    <button type="submit" class="btn btn-primary">Guardar Evento</button>
                                                </div>
                                            </div>
                                        </div>
                                        <ul class="table-top-head">
                                            <li>
                                                <div class="page-btn">
                                                    <a asp-action="Index" class="btn btn-secondary"><i data-feather="arrow-left" class="me-2"></i>Volver a la lista</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div> <!-- /accordion-body -->
                                </div> <!-- /collapseOne -->
                            </div> <!-- /accordion-item -->
                        </div> <!-- /accordion -->
                    </div> <!-- /card-body -->
                </div> <!-- /card -->
            </form> <!-- /form -->
        </div> <!-- /content -->
    </div> <!-- /page-wrapper -->
</body>

<!-- Scripts -->
@section Scripts {
    @{
        /* await Html.RenderPartialAsync("_ValidationScriptsPartial");*/
    }
}
