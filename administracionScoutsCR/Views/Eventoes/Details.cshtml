@model administracionScoutsCR.Models.Evento

@{
    ViewData["Title"] = "Detalles del Evento";
}

<div class="container mt-4">
    <div class="row">
        <!-- Información del Evento -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Detalles del Evento</h5>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i data-feather="arrow-left" class="me-1"></i> Volver
                    </a>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Título</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Titulo)</dd>

                        <dt class="col-sm-4">Fecha</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>

                        <dt class="col-sm-4">Lugar</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Lugar)</dd>

                        <dt class="col-sm-4">Descripción</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                        <dt class="col-sm-4">Encargado</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Encargado)</dd>

                        <dt class="col-sm-4">Contacto del Encargado</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ContactoEncargado)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Imagen del Evento -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <img src="@(string.IsNullOrEmpty(Model.RutaImagen) ? Url.Content("~/assets/img/eventos/evento_default.jpg") : Url.Content(Model.RutaImagen))"
                         alt="Imagen del Evento"
                         class="img-fluid rounded mb-3"
                         style="max-height: 280px; object-fit: cover;" />
                    <h6 class="text-muted">Imagen del Evento</h6>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Asistentes -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Asistentes Confirmados</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Correo Electrónico</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.ConfirmedUsers != null && ViewBag.ConfirmedUsers.Count > 0)
                            {
                                foreach (var user in ViewBag.ConfirmedUsers)
                                {
                                    <tr>
                                        <td>@user.Nombre @user.Apellido1</td>
                                        <td>@user.Correo</td>
                                        <td>
                                            <a asp-controller="Usuarios" asp-action="Details" asp-route-id="@user.IdUsuario" class="btn btn-sm btn-info">
                                                Ver Perfil
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted">No hay asistentes confirmados para este evento.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones del evento -->
    <div class="row">
        <div class="col-lg-12 text-center">
            <a asp-action="Edit" asp-route-id="@Model?.IdEvento" class="btn btn-warning me-2">
                <i data-feather="edit" class="me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i data-feather="list" class="me-1"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        feather.replace();
    </script>
}