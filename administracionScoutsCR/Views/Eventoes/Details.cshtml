@model administracionScoutsCR.Models.Evento

@{
    ViewData["Title"] = "Detalles del Evento";
}

<div >
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Detalles del Evento</h4>
                <h6>Información completa del evento</h6>
            </div>
        </div>

        <!-- Event Details Section -->
        <div class="row">
            <div class="col-lg-8 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="event-details">
                            <ul class="event-bar">
                                <li>
                                    <h4>Título</h4>
                                    <h6>@Html.DisplayFor(model => model.Titulo)</h6>
                                </li>
                                <li>
                                    <h4>Fecha</h4>
                                    <h6>@Html.DisplayFor(model => model.Fecha)</h6>
                                </li>
                                <li>
                                    <h4>Lugar</h4>
                                    <h6>@Html.DisplayFor(model => model.Lugar)</h6>
                                </li>
                                <li>
                                    <h4>Descripción</h4>
                                    <h6>@Html.DisplayFor(model => model.Descripcion)</h6>
                                </li>
                                <li>
                                    <h4>Encargado</h4>
                                    <h6>@Html.DisplayFor(model => model.Encargado)</h6>
                                </li>
                                <li>
                                    <h4>Contacto del Encargado</h4>
                                    <h6>@Html.DisplayFor(model => model.ContactoEncargado)</h6>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side Panel (Placeholder for Event Images or Other Info) -->
            <div class="col-lg-4 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="event-image">
                            <img src="~/assets/img/eventos/evento_default.jpg" alt="Imagen del Evento" class="img-fluid">
                            <h4>Imagen del Evento</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row mt-3">
            <div class="col-lg-12 text-center">
                <a asp-action="Edit" asp-route-id="@Model?.IdEvento" class="btn btn-warning me-2">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>

<!-- Customization Sidebar -->
<div class="customizer-links" id="setdata">
    <ul class="sticky-sidebar">
        <li class="sidebar-icons">
            <a href="#" class="navigation-add" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-original-title="Configuraciones">
                <i data-feather="settings" class="feather-five"></i>
            </a>
        </li>
    </ul>
</div>