@model administracionScoutsCR.Models.ContactoEmergencium

@{
    ViewData["Title"] = "Crear Contacto de Emergencia";
}
<style>
    .card {
        border-radius: 12px;
    }

    .form-control {
        border-radius: 8px;
    }

    .accordion-button, .accordion-body {
        border-radius: 8px;
    }


</style>
<body>
    <div class="content">

        <!-- Formulario de creación de contacto de emergencia -->
        <form asp-action="Create" method="post">

            <div class="card">
                <div class="card-body add-product pb-0">
                    <div class="accordion-card-one accordion" id="accordionExample">
                        <div class="accordion-item">
                            <div class="accordion-header" id="headingOne">
                                <div class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-controls="collapseOne">
                                    <div class="addproduct-icon">
                                        <div class="add-item d-flex">
                                            <div class="page-title">
                                                <h4>Nuevo Contacto de Emergencia</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="row">
                                        <div class="col-lg-6 col-sm-12">
                                            <div class="mb-3">
                                                <label asp-for="Nombre" class="form-label">Nombre</label>
                                                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del contacto" />
                                                <span asp-validation-for="Nombre" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-6 col-sm-12">
                                            <div class="mb-3">
                                                <label asp-for="Parentesco" class="form-label">Parentesco</label>
                                                <input asp-for="Parentesco" class="form-control" placeholder="Ingrese el parentesco" />
                                                <span asp-validation-for="Parentesco" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6 col-sm-12">
                                            <div class="mb-3">
                                                <label asp-for="NumeroContacto" class="form-label">Número de Contacto</label>
                                                <input asp-for="NumeroContacto" class="form-control" placeholder="Ingrese el número de contacto" />
                                                <span asp-validation-for="NumeroContacto" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Botones -->
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="btn-addproduct mb-4">
                                                <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                                                <button type="submit" class="btn btn-primary">Guardar Contacto</button>
                                            </div>
                                        </div>
                                    </div>
                                    <ul class="table-top-head">
                                        <li>
                                            <div class="page-btn">
                                                <a asp-action="Index" class="btn btn-secondary">
                                                    <i data-feather="arrow-left" class="me-2"></i>Volver a la lista
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </div> <!-- /accordion-body -->
                            </div> <!-- /collapseOne -->
                        </div> <!-- /accordion-item -->
                    </div> <!-- /accordion -->
                </div> <!-- /card-body -->
            </div> <!-- /card -->
        </form> <!-- /form -->
    </div> <!-- /content -->
</body>

<!-- Scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
