@model administracionScoutsCR.Models.ContactoEmergencium

@{
    ViewData["Title"] = "Detalle de Contacto de Emergencia";
}

<!-- Centro vertical y horizontal -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-xl-8 col-lg-10 col-md-10">
        <div class="card shadow-lg rounded-4 w-100">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3 px-4 rounded-top-4">
                <h5 class="mb-0">Información del Contacto</h5>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i data-feather="arrow-left" class="me-1"></i> Volver
                </a>
            </div>

            <div class="card-body px-4 py-4">
                <dl class="row mb-0">
                    <dt class="col-sm-5 fw-bold">Nombre</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-5 fw-bold">Parentesco</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Parentesco)</dd>

                    <dt class="col-sm-5 fw-bold">Número de Contacto</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.NumeroContacto)</dd>
                </dl>
            </div>

            <div class="card-footer bg-white text-center py-3">
                <a asp-action="Edit" asp-route-id="@Model?.IdContactoEmergencia" class="btn btn-warning me-2">
                    <i data-feather="edit" class="me-1"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i data-feather="list" class="me-1"></i> Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        feather.replace();
    </script>
}