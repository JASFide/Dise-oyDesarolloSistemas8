@model administracionScoutsCR.Models.ContactoEmergencium

@{
    ViewData["Title"] = "Detalles del Contacto de Emergencia";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Detalles del Contacto</h4>
            <h6>Información completa del contacto de emergencia</h6>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <ul class="event-bar">
                        <li>
                            <h4>Nombre</h4>
                            <h6>@Html.DisplayFor(model => model.Nombre)</h6>
                        </li>
                        <li>
                            <h4>Parentesco</h4>
                            <h6>@Html.DisplayFor(model => model.Parentesco)</h6>
                        </li>
                        <li>
                            <h4>Número de Contacto</h4>
                            <h6>@Html.DisplayFor(model => model.NumeroContacto)</h6>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-3">
        <div class="col-lg-12 text-center">
            <a asp-controller="ContactoEmergenciums" asp-action="Asignar" asp-route-idContacto="@Model.IdContactoEmergencia" class="btn btn-primary">
                <i data-feather="user-plus" class="me-2"></i>Asignar a Usuario
            </a>
            <a asp-action="Edit" asp-route-id="@Model.IdContactoEmergencia" class="btn btn-warning me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

<!-- Customization Sidebar -->
<div class="customizer-links" id="setdata">
    <ul class="sticky-sidebar">
        <li class="sidebar-icons">
            <a href="#" class="navigation-add" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-original-title="Configuraciones">
                <i data-feather="settings" class="feather-five"></i>
            </a>
        </li>
    </ul>
</div>

@section Scripts {
    <script>
        feather.replace();
    </script>
}