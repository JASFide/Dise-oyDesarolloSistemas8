@model administracionScoutsCR.Models.Seccion

@{
    ViewData["Title"] = "Eliminar Sección";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-xl-7 col-lg-8 col-md-10">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center py-3 px-4 rounded-top-4">
                    <h5 class="mb-0">¿Eliminar Sección?</h5>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i data-feather="arrow-left" class="me-1"></i> Cancelar
                    </a>
                </div>

                <div class="card-body px-4 py-4">
                    <p class="text-danger fw-bold">¿Estás seguro de que deseas eliminar esta sección? Esta acción no se puede deshacer.</p>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">Nombre</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 fw-bold">Edad Mínima</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EdadMinima)</dd>

                        <dt class="col-sm-4 fw-bold">Edad Máxima</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EdadMaxima)</dd>

                        <dt class="col-sm-4 fw-bold">Jefe de Sección</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.JefeSeccion)</dd>
                    </dl>
                </div>

                <div class="card-footer bg-white text-center py-3">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="IdSeccion" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i data-feather="trash-2" class="me-1"></i> Eliminar
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i data-feather="x" class="me-1"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        feather.replace();
    </script>
}
