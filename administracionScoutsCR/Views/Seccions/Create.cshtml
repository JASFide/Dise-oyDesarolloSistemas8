@model administracionScoutsCR.Models.Seccion

@{
    ViewData["Title"] = "Crear Sección";
}
<style>
    .card {
        border-radius: 12px;
    }

    .form-control {
        border-radius: 8px;
    }

    .accordion-button, .accordion-body {
        border-radius: 8px;
    }


</style>
<body>
    <div class="content">

        <!-- Formulario de creación de sección -->
        <form asp-action="Create" method="post">
            <div class="card">
                <div class="card-body add-product pb-0">
                    <div class="accordion-card-one accordion" id="accordionExample">
                        <div class="accordion-item">
                            <div class="accordion-header" id="headingOne">
                                <div class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-controls="collapseOne">
                                    <div class="addproduct-icon">
                                        <h5><i data-feather="info" class="add-info"></i><span>Crear una nueva Sección</span></h5>
                                        <a href="javascript:void(0);"><i data-feather="chevron-down" class="chevron-down-add"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="row">
                                        <div class="col-lg-6 col-sm-12">
                                            <div class="mb-3">
                                                <label asp-for="Nombre" class="form-label">Nombre</label>
                                                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la sección" />
                                                <span asp-validation-for="Nombre" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-3 col-sm-6">
                                            <div class="mb-3">
                                                <label asp-for="EdadMinima" class="form-label">Edad Mínima</label>
                                                <input asp-for="EdadMinima" class="form-control" placeholder="Edad mínima" />
                                                <span asp-validation-for="EdadMinima" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-3 col-sm-6">
                                            <div class="mb-3">
                                                <label asp-for="EdadMaxima" class="form-label">Edad Máxima</label>
                                                <input asp-for="EdadMaxima" class="form-control" placeholder="Edad máxima" />
                                                <span asp-validation-for="EdadMaxima" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6 col-sm-12">
                                            <div class="mb-3">
                                                <label asp-for="JefeSeccion" class="form-label">Jefe de Sección</label>
                                                <select asp-for="JefeSeccion" class="form-control" asp-items="ViewBag.Encargados">
                                                    <option value="">Seleccione un encargado</option>
                                                </select>
                                                <span asp-validation-for="JefeSeccion" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Botones -->
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="btn-addproduct mb-4">
                                                <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                                                <button type="submit" class="btn btn-primary">Guardar Sección</button>
                                            </div>
                                        </div>
                                    </div>
                                    <ul class="table-top-head">
                                        <li>
                                            <div class="page-btn">
                                                <a asp-action="Index" class="btn btn-secondary">
                                                    <i data-feather="arrow-left" class="me-2"></i>Volver a la lista
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </div> <!-- /accordion-body -->
                            </div> <!-- /collapseOne -->
                        </div> <!-- /accordion-item -->
                    </div> <!-- /accordion -->
                </div> <!-- /card-body -->
            </div> <!-- /card -->
        </form> <!-- /form -->
    </div> <!-- /content -->
</body>

<!-- Scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
