@model administracionScoutsCR.Models.Seccion

@{
    ViewData["Title"] = "Detalle de Sección";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Detalles de la Sección</h4>
            <h6>Información completa de la sección</h6>
        </div>
    </div>

    <!-- Sección Details Section -->
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="seccion-details">
                        <ul class="event-bar">
                            <li>
                                <h4>Nombre</h4>
                                <h6>@Html.DisplayFor(model => model.Nombre)</h6>
                            </li>
                            <li>
                                <h4>Edad Mínima</h4>
                                <h6>@Html.DisplayFor(model => model.EdadMinima)</h6>
                            </li>
                            <li>
                                <h4>Edad Máxima</h4>
                                <h6>@Html.DisplayFor(model => model.EdadMaxima)</h6>
                            </li>
                            <li>
                                <h4>Jefe de Sección</h4>
                                <h6>@Html.DisplayFor(model => model.JefeSeccion)</h6>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Usuarios -->
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5>Usuarios en esta Sección</h5>
                </div>
                <div class="card-body">
                    @if (Model.Usuarios != null && Model.Usuarios.Any())
                    {
                        <ul class="list-group">
                            @foreach (var usuario in Model.Usuarios)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a asp-controller="Usuarios" asp-action="Details" asp-route-id="@usuario.IdUsuario" class="text-decoration-none fw-semibold">
                                        @usuario.Nombre @usuario.Apellido1
                                    </a>
                                    <a asp-controller="Usuarios" asp-action="Details" asp-route-id="@usuario.IdUsuario" class="btn btn-sm btn-outline-primary">Ver</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No hay usuarios asignados a esta sección.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-3">
        <div class="col-lg-12 text-center">
            <a asp-action="Edit" asp-route-id="@Model?.IdSeccion" class="btn btn-warning me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

<!-- Customization Sidebar -->
<div class="customizer-links" id="setdata">
    <ul class="sticky-sidebar">
        <li class="sidebar-icons">
            <a href="#" class="navigation-add" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-original-title="Configuraciones">
                <i data-feather="settings" class="feather-five"></i>
            </a>
        </li>
    </ul>
</div>

@section Scripts {
    <script>
        feather.replace();
    </script>
}
