@model administracionScoutsCR.Models.Role

@{
    ViewData["Title"] = "Editar Rol";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4>Editar Rol</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i data-feather="arrow-left"></i> Regresar a la Lista
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Accordion para edición -->
                <div class="accordion" id="editRolAccordion">

                    <!-- Información del Rol -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingRol">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRol">
                                <i data-feather="shield" class="me-2"></i> Información del Rol
                            </button>
                        </h2>
                        <div id="collapseRol" class="accordion-collapse collapse show" data-bs-parent="#editRolAccordion">
                            <div class="accordion-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label asp-for="Nombre" class="form-label">Nombre del Rol</label>
                                        <input asp-for="Nombre" class="form-control" />
                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div> <!-- /accordion -->
                <!-- Botones -->
                <div class="mt-4 text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}