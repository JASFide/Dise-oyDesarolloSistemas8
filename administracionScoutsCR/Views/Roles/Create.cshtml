@model administracionScoutsCR.Models.Role

@{
    ViewData["Title"] = "Crear Rol";
}

<body>
    <div class="content">
        <div class="page-header">
            <div class="add-item d-flex">
                <div class="page-title">
                    <h4>Nuevo Rol</h4>
                    <h6>Crear un nuevo rol de usuario</h6>
                </div>
            </div>
            <ul class="table-top-head">
                <li>
                    <div class="page-btn">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i data-feather="arrow-left" class="me-2"></i>Volver a la lista
                        </a>
                    </div>
                </li>
            </ul>
        </div>

        <!-- Formulario de creación de rol -->
        <form asp-action="Create" method="post">
            <div class="card">
                <div class="card-body add-product pb-0">
                    <div class="accordion-card-one accordion" id="accordionExample">
                        <div class="accordion-item">
                            <div class="accordion-header" id="headingOne">
                                <div class="accordion-button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-controls="collapseOne">
                                    <div class="addproduct-icon">
                                        <h5><i data-feather="shield" class="add-info"></i><span>Información del Rol</span></h5>
                                        <a href="javascript:void(0);"><i data-feather="chevron-down" class="chevron-down-add"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="row">
                                        <div class="col-lg-6 col-sm-12">
                                            <div class="mb-3">
                                                <label asp-for="Nombre" class="form-label">Nombre del Rol</label>
                                                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del rol" />
                                                <span asp-validation-for="Nombre" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Botones -->
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="btn-addproduct mb-4">
                                                <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                                                <button type="submit" class="btn btn-primary">Guardar Rol</button>
                                            </div>
                                        </div>
                                    </div>

                                </div> <!-- /accordion-body -->
                            </div> <!-- /collapseOne -->
                        </div> <!-- /accordion-item -->
                    </div> <!-- /accordion -->
                </div> <!-- /card-body -->
            </div> <!-- /card -->
        </form> <!-- /form -->
    </div> <!-- /content -->
</body>

<!-- Scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}