@model administracionScoutsCR.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-xl-9 col-lg-10">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center py-3 px-4 rounded-top-4">
                    <h5 class="mb-0">¿Eliminar Usuario?</h5>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i data-feather="arrow-left" class="me-1"></i> Cancelar
                    </a>
                </div>

                <div class="card-body px-4 py-4">
                    <p class="text-danger fw-bold">¿Estás seguro de que deseas eliminar este usuario? Esta acción no se puede deshacer.</p>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">Nombre</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 fw-bold">Primer Apellido</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido1)</dd>

                        <dt class="col-sm-4 fw-bold">Segundo Apellido</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido2)</dd>

                        <dt class="col-sm-4 fw-bold">Fecha de Nacimiento</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

                        <dt class="col-sm-4 fw-bold">Tipo de Usuario</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoUsuario)</dd>

                        <dt class="col-sm-4 fw-bold">Estado</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

                        <dt class="col-sm-4 fw-bold">Dirección</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                        <dt class="col-sm-4 fw-bold">Correo</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Correo)</dd>

                        <dt class="col-sm-4 fw-bold">Teléfono</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NumeroTelefono)</dd>

                        <dt class="col-sm-4 fw-bold">Contraseña</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Contrasena)</dd>

                        <dt class="col-sm-4 fw-bold">Sección</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdSeccionNavigation.IdSeccion)</dd>
                    </dl>
                </div>

                <div class="card-footer bg-white text-center py-3">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="IdUsuario" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i data-feather="trash-2" class="me-1"></i> Eliminar
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i data-feather="x" class="me-1"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>feather.replace();</script>
}