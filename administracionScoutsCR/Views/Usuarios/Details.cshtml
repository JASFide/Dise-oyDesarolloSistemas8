@model administracionScoutsCR.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h1 class="mb-4 text-primary text-center">Detalles del Usuario</h1>

<div class="container bg-light p-5">
    <!-- Fondo gris para la página -->
    <div class="row">
        <!-- Tarjeta: Nombre Completo -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Nombre Completo</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Nombre @Model.Apellido1 @Model.Apellido2</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Fecha de Nacimiento -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Fecha de Nacimiento</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Tipo de Usuario -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Tipo de Usuario</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.TipoUsuario</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Estado -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Estado</h5>
                </div>
                <div class="card-body">
                    <span class="badge @(Model.Estado ? "bg-success" : "bg-danger")">
                        @(Model.Estado ? "Activo" : "Inactivo")
                    </span>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Sección -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Sección</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@((Model.IdSeccionNavigation != null) ? Model.IdSeccionNavigation.Nombre : "N/A")</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Dirección -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Dirección</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Direccion</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Correo Electrónico -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Correo Electrónico</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Correo</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Número de Teléfono -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Número de Teléfono</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.NumeroTelefono</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.IdUsuario" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>
    </div>
</div>
