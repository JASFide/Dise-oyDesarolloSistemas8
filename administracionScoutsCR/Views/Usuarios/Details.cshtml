@model administracionScoutsCR.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="content">
    

    <div class="card shadow-sm">
        <div class="card-header">
            <h2 class=" fw-bold mb-0">👤 Perfil de Usuario</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-4 col-sm-6 mb-3 d-none">
                    <label class="form-label fw-bold">ID Usuario</label>
                    <p class="form-control-plaintext">@Model.IdUsuario</p>
                </div>
                <div class="col-lg-4 col-sm-6 mb-3">
                    <label class="form-label fw-bold">Nombre Completo</label>
                    <p class="form-control-plaintext">@Model.Nombre @Model.Apellido1 @Model.Apellido2</p>
                </div>
                <div class="col-lg-4 col-sm-6 mb-3">
                    <label class="form-label fw-bold">Fecha de Nacimiento</label>
                    <p class="form-control-plaintext">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-lg-4 col-sm-6 mb-3">
                    <label class="form-label fw-bold">Tipo de Usuario</label>
                    <p class="form-control-plaintext">@Model.TipoUsuario</p>
                </div>
                <div class="col-lg-4 col-sm-6 mb-3">
                    <label class="form-label fw-bold">Estado</label>
                    <p class="form-control-plaintext">@(Model.Estado ? "Activo" : "Inactivo")</p>
                </div>
                <div class="col-lg-4 col-sm-6 mb-3">
                    <label class="form-label fw-bold">Sección</label>
                    <p class="form-control-plaintext">@(Model.IdSeccionNavigation != null ? Model.IdSeccionNavigation.Nombre : "N/A")</p>
                </div>
                <div class="col-lg-4 col-sm-6 mb-3">
                    <label class="form-label fw-bold">Correo</label>
                    <p class="form-control-plaintext">@Model.Correo</p>
                </div>
                <div class="col-lg-4 col-sm-6 mb-3">
                    <label class="form-label fw-bold">Teléfono</label>
                    <p class="form-control-plaintext">@Model.NumeroTelefono</p>
                </div>
                <div class="col-lg-4 col-sm-6 mb-3">
                    <label class="form-label fw-bold">Rol</label>
                    <p class="form-control-plaintext">@(Model.IdRoleNavigation != null ? Model.IdRoleNavigation.Nombre : "N/A")</p>
                </div>
                <div class="col-12 mb-3">
                    <label class="form-label fw-bold">Dirección</label>
                    <p class="form-control-plaintext">@Model.Direccion</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contactos de Emergencia -->
    <div class="card mt-4 shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title fw-bold">Contactos de Emergencia</h5>
            <a asp-controller="ContactoEmergenciums" asp-action="Asignar" asp-route-idUsuario="@Model.IdUsuario" class="btn btn-sm btn-primary">
                <i data-feather="plus"></i> Añadir Contacto
            </a>
        </div>
        <div class="card-body">
            @if (Model.UsuarioxContactoEmergencia != null && Model.UsuarioxContactoEmergencia.Any())
            {
                <ul class="list-group">
                    @foreach (var contacto in Model.UsuarioxContactoEmergencia)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@contacto.IdContactoEmergenciaNavigation?.Nombre</strong> -
                                @contacto.IdContactoEmergenciaNavigation?.Parentesco<br />
                                <span class="text-muted small">@contacto.IdContactoEmergenciaNavigation?.NumeroContacto</span>
                            </div>
                            <a asp-controller="ContactoEmergenciums" asp-action="Details" asp-route-id="@contacto.IdContactoEmergencia" class="btn btn-sm btn-outline-primary">Ver</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No hay contactos de emergencia registrados.</p>
            }
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.IdUsuario" class="btn btn-warning me-2">
            <i data-feather="edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i data-feather="arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>

@section Scripts {
    <script>
        feather.replace();
    </script>
}