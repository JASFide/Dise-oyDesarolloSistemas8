@model administracionScoutsCR.Models.Insignia

@{
    ViewData["Title"] = "Eliminar Insignia";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Eliminar Insignia</h4>
            <h6>¿Estás seguro que deseas eliminar esta insignia?</h6>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card border border-danger">
                <div class="card-body">
                    <ul class="event-bar">
                        <li>
                            <h4>Nombre</h4>
                            <h6>@Html.DisplayFor(model => model.Nombre)</h6>
                        </li>
                        <li>
                            <h4>Sección</h4>
                            <h6>@Html.DisplayFor(model => model.Seccion)</h6>
                        </li>
                        <li>
                            <h4>Tipo</h4>
                            <h6>@Html.DisplayFor(model => model.Tipo)</h6>
                        </li>
                        <li>
                            <h4>Estado</h4>
                            <h6>@Html.DisplayFor(model => model.Estado)</h6>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="row mt-3">
        <div class="col-lg-12 text-center">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdInsignia" />
                <button type="submit" class="btn btn-danger me-2">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
