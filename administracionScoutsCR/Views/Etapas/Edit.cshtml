@model administracionScoutsCR.Models.Etapa

@{
    ViewData["Title"] = "Editar Etapa";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4>Editar Etapa</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i data-feather="arrow-left"></i> Regresar a la Lista
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdEtapa" />

                <div class="accordion" id="editEtapaAccordion">

                    <!-- Información de la Etapa -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingEtapa">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEtapa">
                                <i data-feather="flag" class="me-2"></i> Información de la Etapa
                            </button>
                        </h2>
                        <div id="collapseEtapa" class="accordion-collapse collapse show" data-bs-parent="#editEtapaAccordion">
                            <div class="accordion-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Nombre" class="form-label">Nombre</label>
                                        <input asp-for="Nombre" class="form-control" />
                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Seccion" class="form-label">Sección</label>
                                        <input asp-for="Seccion" class="form-control" />
                                        <span asp-validation-for="Seccion" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Estado" class="form-label">Estado</label>
                                        <input asp-for="Estado" class="form-control" />
                                        <span asp-validation-for="Estado" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div> <!-- /accordion -->
                <!-- Botones -->
                <div class="mt-4 text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}