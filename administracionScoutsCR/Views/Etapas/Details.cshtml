@model administracionScoutsCR.Models.Etapa

@{
    ViewData["Title"] = "Detalles de Etapa";
}

<div>
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Detalles de la Etapa</h4>
                <h6>Información completa de la etapa</h6>
            </div>
        </div>

        <!-- Etapa Details Section -->
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="insignia-details">
                            <ul class="event-bar">
                                <li>
                                    <h4>Nombre</h4>
                                    <h6>@Html.DisplayFor(model => model.Nombre)</h6>
                                </li>
                                <li>
                                    <h4>Sección</h4>
                                    <h6>@Html.DisplayFor(model => model.Seccion)</h6>
                                </li>
                                <li>
                                    <h4>Estado</h4>
                                    <h6>@Html.DisplayFor(model => model.Estado)</h6>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row mt-3">
            <div class="col-lg-12 text-center">
                <a asp-action="Edit" asp-route-id="@Model?.IdEtapa" class="btn btn-warning me-2">Editar</a>
                <a asp-controller="Etapas" asp-action="Asignar" asp-route-idEtapa="@Model.IdEtapa" class="btn btn-primary me-2">
                    <i data-feather="user-plus" class="me-1"></i>Asignar a Usuario
                </a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>

<!-- Customization Sidebar -->
<div class="customizer-links" id="setdata">
    <ul class="sticky-sidebar">
        <li class="sidebar-icons">
            <a href="#" class="navigation-add" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-original-title="Configuraciones">
                <i data-feather="settings" class="feather-five"></i>
            </a>
        </li>
    </ul>
</div>
